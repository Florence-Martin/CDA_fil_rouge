{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@back-entity/*": ["../back/src/entity/*"],
      "@back-utils/*": ["../back/src/utils/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  //pas compil√© par typeScript dans le front
  "exclude": [
    "node_modules",
    "../back/src/services",
    "../back/src/pages",
    "../back/src/errors",
    "../back/src/migration",
    "../back/src/seeder"
  ]
}
